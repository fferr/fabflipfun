{
  "name": "fabflipfun",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@react-native-async-storage/async-storage",
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-codegen",
      "**/react-native-dev-menu",
      "**/react-native-macos"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx packages/",
    "lint:fix": "eslint --fix --ext .js,.jsx packages/",
    "prettier": "prettier --write 'packages/**/*.{js,jsx}'",
    "check:all": "npm run lint && npm run prettier -- --check",
    "check:lint": "npm run lint --silent",
    "check:prettier": "npm run prettier -- --check"
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "prettier": "^2.3.2",
    "ultra-runner": "^3.10.5",
    "lerna": "^6.5.1"
  }
}
